<div class="bg-white ml-52">
  <div class="max-w-7xl mx-auto">
    <div class="flex items-center justify-between">
      <h2 class="text-4xl font-bold tracking-tight text-gray-900">Your Cart</h2>
      <% if @cart.cart_items.any? %>
        <%= link_to "Checkout (#{number_to_currency(@cart.total)})", new_order_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
      <% end %>
    </div>

    <div class="mt-8 sm:mt-12 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
      <% @cart.cart_items.each do |cart_item| %>
        <%= render 'cart/cart_item', cart_item: cart_item %>
      <% end %>
    </div>
  </div>
</div>
