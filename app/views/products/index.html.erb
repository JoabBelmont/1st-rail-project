<div class="bg-white ml-52">
  <div class="max-w-7xl mx-10">
    <div class="flex items-center justify-between">
      <h2 class="text-4xl font-bold tracking-tight text-gray-900">Products</h2>
      <% if current_user && current_user.admin? %>
        <%= link_to "New product", new_product_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
      <% end %>
    </div>

    <div class="mt-8 sm:mt-12 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
      <% @products.each do |product| %>
        <%= render product %>
      <% end %>
    </div>
  </div>
</div>
