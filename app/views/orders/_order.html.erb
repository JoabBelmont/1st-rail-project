<div id="<%= dom_id order %>">

</div>

<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">

    <div id="<%= dom_id order %>">
      <section class="bg-white dark:bg-gray-900">
        <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16">
          <div class="bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-8 md:p-12 mb-8">
            <p class="my-5">
              <strong class="block font-medium mb-1">Status:</strong>
              <%= order.status %>
            </p>

            <p class="my-5">
              <strong class="block font-medium mb-1">Total:</strong>
              <%= order.total %>
            </p>

            <p class="my-5">
              <strong class="block font-medium mb-1">Email:</strong>
              <%= order.email %>
            </p>

            <p class="my-5">
              <strong class="block font-medium mb-1">Card holder:</strong>
              <%= order.card_holder %>
            </p>

            <p class="my-5">
              <strong class="block font-medium mb-1">Card no:</strong>
              <%= order.card_no %>
            </p>

            <p class="my-5">
              <strong class="block font-medium mb-1">Credit expiry:</strong>
              <%= order.credit_expiry %>
            </p>

            <p class="my-5">
              <strong class="block font-medium mb-1">Credit cvc:</strong>
              <%= order.credit_cvc %>
            </p>

            <p class="my-5">
              <strong class="block font-medium mb-1">Billing address:</strong>
              <%= order.billing_address %>
            </p>

            <p class="my-5">
              <strong class="block font-medium mb-1">Billing zip:</strong>
              <%= order.billing_zip %>
            </p>
            <%= link_to "Show this order", order, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
          </div>
          <% if action_name == "show" %>
          <% end %>
        </div>
      </section>
    </div>

  </div>
</div>
